<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <div class="row row-cols-xs-3">
            <div class="col">
                <img class="img-fluid" src="/burger.png" alt="200x200">
            </div>
            <div class="col">
                <h1 class="text-center">Eat Burgers</h1>
            </div>

            <div class="col">
                <img class="img-fluid" src="/burger.png" alt="200x200">
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row well">
        <div class="col-6">
            <p>These Items Can Be Eaten</p>
            {{#each burger_data}}
            {{#unless this.devoured}}

            <div class="row burger-well">
                <div class="col-xs-9 text-center">
                    {{this.id}}. {{this.burger_name}}
                </div>

                <div class="col-xs-3 text-center">
                    <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                        <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                        <button type="submit" class="">Eat it</button>
                    </form>
                </div>

            </div>
            {{/unless}}{{/each}}

        </div>


        <div class="col-6" class="ate-well">
            <p>These Items Have Been Eaten</p>
            {{#each burger_data}}
            {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}} {{this.burger_name}}" readonly>
            {{/if}}
            {{/each}}
        </div>

    </div>



    <div class="row submit-form">
        <div class="col-xs-12 col-md-6 text-center enter_section m-5">
            <form action="/burgers/create" method="POST">
                <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
                <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
            </form>
            <p>Enter in a burger you would like to eat!</p>
        </div>
    </div>
</div>